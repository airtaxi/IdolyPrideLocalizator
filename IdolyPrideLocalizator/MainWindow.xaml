<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="IdolyPrideLocalizator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:IdolyPrideLocalizator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Idoly Pride Localizator"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TitleBar
            x:Name="TitleBar"
            Title="Idoly Pride Localizator"
            Grid.Row="0"
            Padding="10,0,0,0">
            <TitleBar.IconSource>
                <ImageIconSource ImageSource="ms-appx:///Icon.png" />
            </TitleBar.IconSource>

            <TextBox
                Grid.Column="2"
                Width="300"
                VerticalAlignment="Center"
                PlaceholderText="Search script..." />
        </TitleBar>

        <Grid Grid.Row="1" Background="{ThemeResource LayerOnMicaBaseAltFillColorDefault}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
        </Grid>
    </Grid>
</Window>
